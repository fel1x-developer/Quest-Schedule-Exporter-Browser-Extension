{
	"name": "quest-schedule-exporter-browser-extension",
	"description": "Schedule exporting browser extension for uWaterloo Quest",
	"private": true,
	"version": "1.0.1",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:chrome": "wxt -b chrome",
		"dev:edge": "wxt -b edge",
		"dev:firefox": "wxt -b firefox",
		"dev:safari": "wxt -b safari",
		"build": "bun run build:chrome && bun run build:edge && bun run build:firefox && bun run build:safari",
		"build:chrome": "wxt build -b chrome",
		"build:edge": "wxt build -b edge",
		"build:firefox": "wxt build -b firefox",
		"build:safari": "wxt build -b safari",
		"zip": "bun run zip:chrome && bun run zip:edge && bun run zip:firefox && bun run zip:safari",
		"zip:chrome": "wxt zip -b chrome",
		"zip:edge": "wxt zip -b edge",
		"zip:firefox": "wxt zip -b firefox",
		"zip:safari": "wxt zip -b safari",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"postinstall": "wxt prepare",
		"test": "bun run test:unit && bun run test:e2e",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest watch",
		"test:e2e": "bunx playwright test",
		"test:e2e:watch": "bunx playwright test --watch"
	},
	"devDependencies": {
		"@playwright/test": "^1.55.0",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@tsconfig/svelte": "^5.0.5",
		"@types/node": "^24.5.2",
		"@vitest/coverage-v8": "^3.2.4",
		"@wxt-dev/auto-icons": "^1.1.0",
		"@wxt-dev/module-svelte": "^2.0.4",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.3",
		"svelte-check": "^4.3.1",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"wxt": "^0.20.11"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.13",
		"tailwindcss": "^4.1.13"
	}
}
